@model IEnumerable<MVCProject.Models.ProfileViewModel>

@{
    ViewData["Title"] = "ProfileView";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Address</th>
                        <th>Phone Number</th>
                        <th>Profile Picture</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Address</td>
                            <td>@item.PhoneNumber</td>
                            <td><img src="@item.ProfilePicture" alt="Profile Picture" class="img-thumbnail" width="150" /></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
